{
    global.stoppedLastTick = false;
    x += playerSpeed;
    image_speed = animSpeed;
}

//if stopped make legs straight
if (image_speed == 0 &amp;&amp; global.stoppedLastTick == false)
{  
    if(image_index &lt; 6)
    {
        image_index = 0;
    }
    else
    {
        image_index = 6;
    }
    global.stoppedLastTick = true;
}

//look at mouse
